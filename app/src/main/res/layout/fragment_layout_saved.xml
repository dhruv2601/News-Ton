<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shadow"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <ListView
        android:id="@+id/listViewTopStories"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/shadow"
        android:divider="@drawable/greyback"
        android:dividerHeight="18dp"
        android:visibility="gone">

    </ListView>

    <ListView
        android:id="@+id/listViewSports"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/shadow"
        android:divider="@drawable/greyback"
        android:dividerHeight="18dp"
        android:visibility="gone">

    </ListView>

    <ListView
        android:id="@+id/listViewTech"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/shadow"
        android:divider="@drawable/greyback"
        android:dividerHeight="5dp"
        android:visibility="gone">

    </ListView>

    <ListView
        android:id="@+id/listViewWorld"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/shadow"
        android:divider="@drawable/greyback"
        android:dividerHeight="5dp"
        android:visibility="gone">

    </ListView>

    <ListView
        android:id="@+id/savedArticle"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/shadow"
        android:divider="@drawable/greyback"
        android:dividerHeight="5dp"
        android:visibility="gone">

    </ListView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/deleteAll"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:rippleColor="@color/teal"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_delete"
        app:fabSize="mini"
        android:layout_marginBottom="21dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/play"
        android:layout_alignStart="@+id/play" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/play"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:rippleColor="@color/teal"
        android:clickable="true"
        android:src="@android:drawable/ic_media_play"
        app:fabSize="mini"
        android:layout_above="@+id/deleteAll"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="NO SAVED ARTICLES"
        android:textSize="20dp"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/noSavedArt" />

</RelativeLayout>
