<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/teal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name"
        android:text="Dhruv Rathi"
        android:textSize="32dp"
        android:textStyle="bold"
        android:layout_marginTop="300dp"
        android:textColor="@color/black"
        android:background="@color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_below="@+id/name"
        android:text="       dhruvrathi15@gmail.com"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="27dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <de.hdodenhof.circleimageview.CircleImageView

        android:layout_width="150dp"
        android:src="@drawable/don"
        android:layout_marginBottom="60dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/myFbLink"
        android:layout_width="70dp"
        android:src="@drawable/facebook"
        android:layout_height="70dp"
        android:layout_marginTop="457dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="19dp" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/myGitLink"
        android:layout_width="70dp"
        android:src="@drawable/git"
        android:layout_height="70dp"
        android:layout_marginTop="457dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="23dp"
        />

    <TextView
        android:layout_below="@id/myFbLink"
        android:textSize="20dp"
        android:text="           \\___ R e a c h   M e   A t ___/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>