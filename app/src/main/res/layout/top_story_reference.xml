<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlWithTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/toi"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="146dp"
            android:src="@drawable/toi"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toi"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed"
            android:text=" Times Of India"
            android:textSize="20dp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/india_today"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/toi"
            android:layout_centerHorizontal="true"
            android:src="@drawable/indiatoday"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/india_today"
            android:layout_alignStart="@+id/india_today"
            android:layout_alignTop="@+id/textView2"
            android:fontFamily="sans-serif-condensed"
            android:text=" India Today"
            android:textSize="20dp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ndtv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/india_today"
            android:src="@drawable/ndtv"
            app:civ_border_width="3dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView3"
            android:fontFamily="sans-serif-condensed"
            android:text="     NDTV"
            android:textSize="20dp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/hindu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="56dp"
            android:src="@drawable/hindu"
            app:civ_border_width="3dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/hindu"
            android:layout_alignStart="@+id/hindu"
            android:layout_below="@+id/hindu"
            android:fontFamily="sans-serif-condensed"
            android:text=" The Hindu"
            android:textSize="20dp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/abc"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_alignTop="@+id/hindu"
            android:src="@drawable/abc"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/abc"
            android:layout_alignStart="@+id/abc"
            android:layout_below="@+id/abc"
            android:fontFamily="sans-serif-condensed"
            android:text="   abc News"
            android:textSize="20dp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/telegraph"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/abc"
            android:src="@drawable/telegraph"
            app:civ_border_width="3dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/telegraph"
            android:fontFamily="sans-serif-condensed"
            android:text="The Telegraph"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/india_today"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="56dp"
            android:fontFamily="sans-serif-condensed"
            android:text="N  E  W  S"
            android:textAlignment="center"
            android:textSize="33sp"
            android:textStyle="bold" />

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            style="@style/AVLoadingIndicatorView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/india_today"
            android:layout_alignLeft="@+id/india_today"
            android:layout_alignStart="@+id/india_today"
            android:layout_marginBottom="14dp"
            android:visibility="gone"
            app:indicatorColor="@color/red"
            app:indicatorName="TriangleSkewSpinIndicator" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlWithTopWV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <WebView
            android:id="@+id/webViewForTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </WebView>

    </RelativeLayout>

</RelativeLayout>