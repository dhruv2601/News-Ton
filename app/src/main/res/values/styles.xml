<resources>

    <style name="textSize" parent="TextAppearance.AppCompat">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="DrawerArrowStyle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#d32f2f</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:tabStripEnabled">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="BaseText" parent="android:TextAppearance.Holo.Large">
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="LocationText" parent="BaseText">
        <item name="android:textSize">@dimen/location_text</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="CurrentTemperatureText" parent="BaseText">
        <item name="android:textSize">@dimen/current_temperature_text</item>
        <item name="android:textColor">@color/brand_main</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="WeatherForecastListItemText" parent="BaseText">
        <item name="android:textSize">@dimen/weather_forecast_list_item_text</item>
        <item name="android:paddingTop">@dimen/list_item_text_padding</item>
        <item name="android:paddingBottom">@dimen/list_item_text_padding</item>
        <item name="android:layout_width">0dp</item>
        <!-- To force the text views into columns -->
    </style>

    <style name="WeatherForecastListItemTextEmphasis" parent="WeatherForecastListItemText">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="WeatherForecastListItemTextDeEmphasis" parent="WeatherForecastListItemText">
        <item name="android:textColor">@color/text_de_emphasized</item>
    </style>

    <style name="AttributionText" parent="BaseText">
        <item name="android:textSize">@dimen/attribution_text</item>
        <item name="android:textColor">@color/text_faint</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@android:color/white</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--dialog background-->
        <item name="android:windowBackground">@color/teal</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="MyInvisibleDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@android:color/transparent</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/transparent</item>
        <!--dialog background-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textSize">20dp</item>
    </style>


    <style name="MyImageTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@android:color/white</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--dialog background-->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textSize">20dp</item>
    </style>

</resources>
